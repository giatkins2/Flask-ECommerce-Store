{% extends 'base.html.j2'%}

{% block title %}
Shop
{% endblock %}
{% block content %}
<br>
<section class="hero is-primary">
    <div class="hero-body">
        <p class="title">
        Get your favourite plants. 
        </p>
        <p class="subtitle">
        Indoors and outdoors
        </p>
    </div>
</section>
<br>
<div class="columns is-multiline">

{% for item in items %}
    <div class="column is-one-fifth">
        <div class="card">
        <div class="card-image">
            <figure class="image is-4by3">
            <img src="{{item.img}}" alt="plant">
            </figure>
        </div>
        <div class="card-content">
            <div class="media-content">
                <p class="title is-6">{{item.name}}</p>
                <p class="subtitle is-6">{{item.price}}</p>
            </div>
            </div>
            <a href="{{url_for('shop.add_item', id=item.id)}}" class="button is-fullwidth is-success">Add</a>
            <a href="{{url_for('shop.get_product', id=item.id)}}" class="button is-fullwidth is-info">Info</a>
        </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}